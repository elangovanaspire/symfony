<?xml version="1.0" encoding="UTF-8" ?>
<database
    name="default"
    namespace="Acme\DemoBundle\Model"
    defaultIdMethod="native">

    <table name="user">
        <column
            name="id"
            type="integer"
            required="true"
            primaryKey="true"
            autoIncrement="true" />

        <column
            name="username"
            type="varchar"
            primaryString="true"
            size="100" />
         <column
            name="email"
            type="varchar"
            primaryString="true"
            size="100" />       
    </table>
</database>